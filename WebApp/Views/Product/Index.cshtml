@{
}
@using Entities;
@model List<Product>;

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">SalesPrice</th>
            <th scope="col">Category</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Image_Src</td>
                <td>@item.SalesPrice</td>
                <td>@item.Category_Id</td>
                <td><a href=/Update/@item.Id class="btn btn-warning">Update</a></td>
                <td><a href=/Product/Delete/@item.Id class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/Add" class="btn btn-success">Yeni Ürün Ekle</a>
