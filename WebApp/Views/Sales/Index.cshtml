@{
}
@using Entities;
@model List<Sales>;

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product</th>
            <th scope="col">Quantity</th>
            <th scope="col">Sales Price</th>
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
            <th scope="col">Customer Title</th>
            <th scope="col">List Price</th>
            <th scope="col">Discountrate</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.SalesPrice</td>
                <td>@item.Date</td>
                <td>@item.Amount</td>
                <td>@item.Customer.CustomerTitle</td>
                <td>@item.ListPrice</td>
                <td>%@item.Discountrate</td>
                <td><a href=/Sales/Delete/@item.Id class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Sales/Add" class="btn btn-success">Add New Sale</a>
