@{
}
@using Entities;
@model List<Purchase>;

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Customer_Id</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Product.Name</th>
                <td>@item.Customer.CustomerTitle</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td><a href=/Purchase/Delete/@item.Id class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Purchase/Add" class="btn btn-success">Add New Purchase</a>